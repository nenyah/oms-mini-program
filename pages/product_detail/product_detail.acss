/* 页面整体布局 */
.body {
  display:flex;
  flex-direction: column;
}

/* 顶部搜索栏 */
.top {
  background: red;
  width: 100%;
  height: 50rpx;
  position:fixed;
  top:0;
  display: flex;
  flex-direction: row;
}

/* 产品详情页 */
.product_detail {
  background: green;
  width: 100%;
  height: 1200rpx;
}

.main_pic {
  margin: 60rpx 0;
}
.main_pic image {
  width:750rpx;
  height:650rpx;
}
/* 底部购物车 */
.add_cart {
  background: yellow;
  width: 100%;
  height: 100rpx;
  position:fixed;
  bottom:0;
}